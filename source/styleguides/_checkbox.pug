-
  var listColor = ['success', 'primary', 'warning', 'danger']
-
  var listSize = ['sx','sm','md','lg']
h2 Switch
.row
  each item, index in listSize
    .col-md-6.col-12
      h3 Color Switch
      .code-example
        .demo
          +switch({
            checked: true,
            id: `swt${index}`,
            type: item
          })
        pre
          code
            |+switch({
            |   checked: true,
            |   id: 'swt#{index}',
            |   type: '#{item}'
            |})
h2 Checkbox
.row
  .col-md-6.col-12
    .code-example
      .demo
        h3 Checkbox Base
        +checkbox({
          checked: true,
          id: 'check1',
          label: 'Option1',
        })
        +checkbox({
          checked: false,
          id: 'check2',
          label: 'Option2',
        })
        +checkbox({
          checked: false,
          id: 'check3',
          label: 'Option3',
          disabled: true
        })
      pre
        code
        |+checkbox({
