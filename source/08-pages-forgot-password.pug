extends modules/layout/_page-default
        
block head
  +head('Beagle')

block main
  .main-content.container-fluid
    .login.forgot
      .card.card-primary
        .card-header
          a(href="home.html")
            img.login-img(src="images/logo-xx.png", alt="")
          span.login-notice Forgot your password?
        .card-body
          form
            p Don't worry, we'll send you an email to reset your password.
            .form-group
              +input-field({
                id: 'email',
                placeholder: 'Your Email',
                type: 'email'
              })
            p.contact
              | Don't remember your email? 
              a(href="#") Contact Support
              | .
            .form-group.pt-1
              +buttons({
                type: 'primary',
                text: 'Reset Password',
                size: 'xl'
              })(class="btn-signup")
      .footer Â© 2018 Your Company

