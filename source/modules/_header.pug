//-------------------------------------------------------
//- Modules :: Header
//-------------------------------------------------------

mixin header(title)
  nav.navbar.navbar-expand.fixed-top
    .container-fluid
      .navbar-wrap
        a.navbar-brand(href="home.html")
      .page-title
        span=title
      .navbar-more
        ul.nav.navbar-nav.float-right.user-nav
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-expanded="false")
              img.user-img(src="images/avatar.png" alt="Avatar")
              span.user-name Túpac Amaru
            .dropdown-menu.dropdown-admin(role="menu")
              .user-info
                .user-name Túpac Amaru
                .user-position.online Available
              a.dropdown-item(href="#")
                i.icon.zmdi.zmdi-face
                | Account
              a.dropdown-item(href="#")
                i.icon.zmdi.zmdi-settings
                | Settings
              a.dropdown-item(href="#")
                i.icon.zmdi.zmdi-power
                | Logout
        ul.nav.navbar-nav.float-right.icon-nav
          li.nav-item.dropdown.js-settings
            a.nav-link.nav-link-setting.jsnav-link-setting(href="#" role="button" aria-expanded="false")
              i.icon.zmdi.zmdi-settings
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-expanded="false")
              i.icon.zmdi.zmdi-notifications
              span.indicator
            .dropdown-menu.block-notifications
              .title Notifications
                span.badge.badge-pill 3
              .list.js-list-notifi
                .content-notifications.js-list
                  ul
                    li.notification.notification-unread
                      a(href="#")
                        .image
                          img.user-img(src="images/avatar2.png", alt="Avatar")
                        .notification-info
                          p.text
                            span.user-name Jessica Caruso
                            |  accepted your invitation to join the team.
                          span.time-active 2 min ago
                    li.notification
                      a(href="#")
                        .image
                          img.user-img(src="images/avatar3.png", alt="Avatar")
                        .notification-info
                          p.text
                            span.user-name Joel King
                            |  is now following you
                          span.time-active 2 days ago
                    li.notification
                      a(href="#")
                        .image
                          img.user-img(src="images/avatar4.png", alt="Avatar")
                        .notification-info
                          p.text
                            span.user-name John Doe
                            |  is watching your main repository
                          span.time-active 2 day ago
                    li.notification
                      a(href="#")
                        .image
                          img(src="images/avatar5.png", alt="Avatar")
                        .notification-info
                          p.text
                            span.user-name Emily Carter
                            |  is now following you
                          span.time-active 5 day ago
              .footer
                a(href="#") View all notifications
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-expanded="false")
              i.icon.zmdi.zmdi-apps
            .dropdown-menu.block-connect
              .list-connect
                .row
                  .col
                    a.connect-item(href="#")
                      img(src="images/github.png", alt="")
                      span GitHub
                  .col
                    a.connect-item(href="#")
                      img(src="images/bitbucket.png", alt="")
                      span BitBucket
                  .col
                    a.connect-item(href="#")
                      img(src="images/slack.png", alt="")
                      span Slack
                .row
                  .col
                    a.connect-item(href="#")
                      img(src="images/dribbble.png", alt="")
                      span Dribbble
                  .col
                    a.connect-item(href="#")
                      img(src="images/mail_chimp.png", alt="")
                      span Mail Chimp
                  .col
                    a.connect-item(href="#")
                      img(src="images/dropbox.png", alt="")
                      span Dropbox
              .footer
                a(href="#") More
