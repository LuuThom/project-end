mixin radio({id, typeRadio, name, checked, icon, typeInput})
  label.custom-control.custom-radio()&attributes(attributes)
    input.custom-control-input(
      id= id ? id : null
      type= typeRadio ? 'radio' : null
      name= name ? name : null
      checked= checked ? checked : null
    )
    span.custom-control-label
      i(class= icon ? `zmdi-${icon}` : null)

